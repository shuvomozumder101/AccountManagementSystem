@page
@model AccountManagementSystem.Pages.Vouchers.CreateReceiptModel
@{
    ViewData["Title"] = "Create Receipt Voucher";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (Model.StatusMessage != null)
    {
        <div class="alert alert-info">@Model.StatusMessage</div>
    }
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Voucher.VoucherType" />

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>Voucher Header</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Voucher.VoucherDate"></label>
                                <input asp-for="Voucher.VoucherDate" class="form-control" type="date" />
                                <span asp-validation-for="Voucher.VoucherDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Voucher.ReferenceNo"></label>
                                <input asp-for="Voucher.ReferenceNo" class="form-control" />
                                <span asp-validation-for="Voucher.ReferenceNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Voucher.Description"></label>
                            <textarea asp-for="Voucher.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Voucher.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <partial name="_VoucherDetailsPartial" model="Model.Voucher" view-data='new ViewDataDictionary(ViewData) { { "AccountList", Model.AccountsSelectList } }' />
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Save Voucher</button>
                    <a asp-page="Index" class="btn btn-secondary">Back to Vouchers</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}